<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ContentManager</title>
    <link rel="stylesheet" href="~/content-manager-assets/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <environment include="Development">
        <link rel="stylesheet" href="~/content-manager-assets/css/contentmanager.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/content-manager-assets/css/contentmanager.min.css"/>
    </environment>
</head>
<body>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<hr>
<footer>
    <div class="content-manager_logo">
        <img src="/content-manager-assets/images/content-manager-logo.png" alt="contentmanager" height="100px">
    </div>
    <div class="content-manager_copyright">
        <div class="title">Content Manager</div>
        <div class="link">Open Source by <a href="https://github.com/michaeldisaro">Michael Disarò</a></div>
        <div class="link">Powered by <a href="https://ckeditor.com/">CKEditor</a></div>
    </div>
</footer>
<script src="~/content-manager-assets/lib/jquery/dist/jquery.min.js"></script>
<script src="~/content-manager-assets/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>