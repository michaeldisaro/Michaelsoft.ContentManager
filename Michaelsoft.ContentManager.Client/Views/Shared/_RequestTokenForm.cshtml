@using Microsoft.AspNetCore.Mvc.Localization
@model Michaelsoft.ContentManager.Client.Models.Forms.RequestTokenForm
@inject IViewLocalizer Localizer

<form method="post" asp-area="Authentication" asp-page="/RequestToken">
    <div class="request-token-form">
        <div class="form-group">
            <div class="content-manager_form-label">
                <label asp-for="TokenRequest.Author"></label>
            </div>
            <div class="content-manager_form-input">
                <input type="text" class="form-control" asp-for="TokenRequest.Author"/>
            </div>
            <div class="content-manager_form-error">
                <span asp-validation-for="TokenRequest.Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-sm btn-block">@Localizer[Model.RequestTokenLabel]</button>
        </div>
    </div>
</form>